<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.0.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="navbar navbar-inverse" role="navigation">
        <a class="navbar-brand" href="#">Test service</a>
        
    </div>
    <div class="row panel">
        <div id="categories" class="col-xs-3">
            @Ajax.ActionLink("Home", "Index", "Test", null,
    new AjaxOptions { UpdateTargetId = "results" }, new { @class = "btn btn-block btn-default btn-lg" })
            @Html.ActionLink("Login", "Login", "Account", null,
    new { @class = "btn btn-block btn-default btn-lg" })
            @Ajax.ActionLink("View Statistic", "ViewStatistic", "Result", new { userId = 1 }, 
           new AjaxOptions { UpdateTargetId = "results" }, new { @class = "btn btn-block btn-default btn-lg" })
            @Html.ActionLink("Admin", "Index", "Admin", null,
    new { @class = "btn btn-block btn-default btn-lg" })
         
                
          
        </div>
        <div class="col-xs-8">
            <div id="results">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>

